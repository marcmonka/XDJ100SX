<Template>
    <WidgetGroup>
        <ObjectName>KeyShiftPanel</ObjectName>
            <Size>0me,0me</Size>
             <Layout>vertical</Layout>
        <Children>
        <WidgetGroup>
        <ObjectName>Waveforms_Container</ObjectName>
        <Layout>horizontal</Layout>
        <Children>
          <Template src="skin:waveforms.xml"></Template>
        </Children>
      </WidgetGroup>
    
    <WidgetGroup><ObjectName>KeyShiftFunction</ObjectName><Layout>horizontal</Layout><Size>100me,95f</Size><Children>
                
                <WidgetGroup><Size>100f,35f</Size></WidgetGroup>


                <WidgetGroup><ObjectName>KeyShift</ObjectName><Layout>horizontal</Layout><Size>140f,75f</Size>
                <Children>
                        <PushButton>
                        <NumberStates>1</NumberStates>
                        <ObjectName>Pitch</ObjectName>
                        <Size>140f,75f</Size>
                        <State
                        ><Number>0</Number>
                        <Text>-1 st</Text>
                        </State>
                        <Connection>
                        <ConfigKey>[Channel1],pitch_down</ConfigKey>
                        </Connection>
                        </PushButton>
                    </Children>
                    </WidgetGroup>

                <WidgetGroup><Size>10f,35f</Size></WidgetGroup>
                <WidgetGroup><ObjectName>SeparadorKey</ObjectName><Size>80f,25f</Size></WidgetGroup>
                <WidgetGroup><Size>10f,35f</Size></WidgetGroup>

                <WidgetGroup><Size>140f,75f</Size>
                <Layout>vertical</Layout>
                <Children>


                                    <WidgetGroup><Size>140f,50f</Size>
                                    <Layout>horizontal</Layout>
                                    <Children>

                                    
                                                            <Key>
                                                            <ObjectName>KeyShiftInfo</ObjectName>
                                                            <Size>70f,55f</Size>
                                                            <TooltipId>visual_key</TooltipId>
                                                            <DisplayCents>false</DisplayCents> <!-- false (default) or true) -->
                                                            <Alignment>center</Alignment>
                                                            <Connection>
                                                            <ConfigKey>[Channel1],visual_key</ConfigKey>
                                                            </Connection>
                                                            </Key>
                                                            

                                                            <Number>
                                                            <ObjectName>KeyShiftInfo2</ObjectName>
                                                            <Size>70f,50f</Size>
                                                            <TooltipId>pitch_adjust</TooltipId>
                                                           <NumberOfDigits>0</NumberOfDigits>

                                                            <Alignment>center</Alignment>
                                                            
                                                            
                                                            <Connection>
                                                                <ConfigKey>[Channel1],pitch</ConfigKey>

                                                            </Connection>
                                                            </Number>                 


                                    </Children>
                                    </WidgetGroup>

                                    <WidgetGroup>
                                    <ObjectName>ResetKey</ObjectName>
                                    <Layout>vertical</Layout>
                                    <Size></Size>
                                    <Children>

                                            <PushButton>
                                            <ObjectName>ResetButton</ObjectName>

                                            <NumberStates>2</NumberStates>
                                            <Size>me,me</Size>
                                            <State>
                                                <Number>0</Number> <!--inactiu-->
                                                <Text>RESET</Text>
                                            </State>
                                            <State>
                                                <Number>1</Number> <!--actiu-->
                                                <Text>RESET</Text>
                                            </State>
                                            <Connection>
                                                <ConfigKey>[Channel1],reset_key</ConfigKey>
                                            </Connection>
                                            </PushButton>
                                    </Children>
                                    </WidgetGroup>


                </Children>
                </WidgetGroup>
                                          
                 
                <WidgetGroup><Size>10f,35f</Size></WidgetGroup>
                <WidgetGroup><ObjectName>SeparadorKey</ObjectName><Size>80f,25f</Size></WidgetGroup>
                <WidgetGroup><Size>10f,35f</Size></WidgetGroup>


                <WidgetGroup><ObjectName>KeyShift</ObjectName><Layout>horizontal</Layout><Size>140f,75f</Size>
                <Children>
                 <PushButton>
                <NumberStates>1</NumberStates>
                <ObjectName>Pitch</ObjectName>
                <Size>140f,75f</Size>
                <State
                ><Number>0</Number>
                <Text>+1 st</Text>
                </State>
                <Connection>
                <ConfigKey>[Channel1],pitch_up</ConfigKey>
                </Connection>
                </PushButton>

                </Children>
                </WidgetGroup>
                
                <WidgetGroup><Size>100f,35f</Size></WidgetGroup>

                

      
                
            </Children></WidgetGroup> 
           
            

<WidgetGroup>
